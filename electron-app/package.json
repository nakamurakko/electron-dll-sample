{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron app calls C# DLL.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "set DEBUG_MODE=true && electron .",
    "build-portable": "electron-builder build --windows portable"
  },
  "author": "nakamurakko",
  "license": "MIT",
  "build": {
    "asar": "false",
    "directories": {
      "output": "executableFile"
    },
    "files": [
      "!.vscode/*",
      "!Libraries/*",
      "!SharedLibraries/*",
      "!CopyExcludedFiles.txt"
    ],
    "extraResources": [
      "Libraries/SampleLib.dll"
    ]
  },
  "dependencies": {
    "electron-edge-js": "^32.0.0"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^25.1.7"
  }
}
